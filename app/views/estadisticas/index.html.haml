= render :partial => "portal/find_box"
#container
  #wraper
    #content
      %h1 Estadísticas       
      #results
        .notice
          Seleccione una institución para ver su información relacionada.
        %br/
        #listing
          %h3 Instituciones
          %table.minimalist-b{:width => "100%"}
            %thead
              %tr
                %th= Institucion.human_name
            %tbody
            - for institucion in @instituciones
              %tr
                %td= link_to institucion.nombre, portal_estadistica_path(1,institucion.id), :title => "Estadisticas para #{institucion.nombre}"
  #navigation
  = render :partial => "portal/news_links" 
/ end - container
