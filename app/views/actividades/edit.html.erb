<h1>Editing actividad</h1>

<% form_for(@actividad) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :institucion_id %><br />
    <%= f.text_field :institucion_id %>
  </p>
  <p>
    <%= f.label :usuario_id %><br />
    <%= f.text_field :usuario_id %>
  </p>
  <p>
    <%= f.label :fecha_asignacion %><br />
    <%= f.date_select :fecha_asignacion %>
  </p>
  <p>
    <%= f.label :textoactividad %><br />
    <%= f.text_area :textoactividad %>
  </p>
  <p>
    <%= f.label :estado_id %><br />
    <%= f.text_field :estado_id %>
  </p>
  <p>
    <%= f.label :fecha_resolucion %><br />
    <%= f.date_select :fecha_resolucion %>
  </p>
