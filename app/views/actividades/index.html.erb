<%= render :partial => "breadcrums" %>
<h1 class="alt"> <%= t("actividades.title") %></h1>
<fieldset>
  <legend> <%= image_tag('textfile22.png') %> <%= t("actividades.title") %> </legend>


<table id='minimalist-a' width="100%">
  <thead>
    <th class="col"><%= t("solicitudes.label_estado_id") %></th>
    <th class="col"><%= t("solicitudes.label_codigo") %></th>
    <th class="col"><%= t("solicitudes.label_institucion_id") %></th>
    <th class="col"><%= t("solicitudes.label_fecha_creacion") %></th>
    <th class="col"><%= t("solicitudes.label_dias_restantes") %></th>
  </thead>
  <tbody>
    <% for asignacion in @asignaciones do %>
    <tr>
      <td><%= asignacion.solicitud.estado.nombre %></td>
      <td><%= link_to asignacion.solicitud.codigo, institucion_solicitud_path(asignacion.solicitud.institucion_id, asignacion.solicitud) %></td>
      <td><%= asignacion.solicitud.institucion.nombre %></td>
      <td><%= asignacion.solicitud.fecha_creacion %></td>
      <td><%= asignacion.solicitud.dias_restantes %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <td colspan="10">
      *Solicitudes pendiente de ser entregada a solicitantes.
    </td>
  </tfoot>
</table>

</fieldset>
