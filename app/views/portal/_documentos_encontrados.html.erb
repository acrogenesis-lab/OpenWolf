<% unless @documentos.nil? %>
  <h3><%= @documentos.total %> Documentos Encontrados</h3>

  <table class="minimalist-b" width="100%">
    <thead>
      <tr>
        <th><%= Documento.human_attribute_name(:numero) %></th>
        <th><%= Documento.human_attribute_name(:fecha_documento) %></th>
        <th><%= Documento.human_attribute_name(:documentoclasificacion_id) %></th>
        <th><%= Documento.human_attribute_name(:asunto) %></th>
        <th><%= Documento.human_attribute_name(:estado_envio_id) %></th>
        <th><%= Documento.human_attribute_name(:institucion_id) %></th>
      </tr>
    </thead> 
    <tbody>
        <% @documentos.each_hit_with_result do |hit, documento| -%>
        <tr>
          <td>
	    <%= link_to documento.numero, documento_portal_path(:id => documento.id), :title => "Haga click para ver contendido del Documento" %>
          </td>
          <td><%= l(documento.fecha_recepcion) %></td>
          <td><%= documento.clasificacion_nombre %></td>
          <td><%= documento.asunto %></td>
          <td><%= documento.estado_nombre %></td>
          <td><%= link_to documento.institucion.abreviatura, institucion_portal_path(documento.institucion), :title => documento.institucion.nombre %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @documentos.results %>
  <br /><br />
<% end %>
