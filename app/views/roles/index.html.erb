<div class="listing">
  <h2><%= Role.human_name.pluralize %></h2>
  
  <div id="options">
    <%= button_new(new_role_path) %>
    <%= render :partial => 'shared/findbox', :locals => {:url => roles_path} %>
  </div>
  
  <table class="minimalist-b">
    <thead>
      <tr>
        <th><%= Role.human_attribute_name(:name) %></th>
      </tr>
    </thead> 
    <tbody>
      <% for role in @roles  do%>
        <tr>
          <td>
	    <%= link_to role.name, role_path(role) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @roles %>
  
</div>
