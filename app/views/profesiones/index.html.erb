<div class="listing">
  <h2><%= Profesion.human_name.pluralize %></h2>
  
  <div id="options">
    <%= button_new(new_profesion_path) %>
    <%= render :partial => 'shared/findbox', :locals => {:url => profesiones_path} %>
  </div>
  
  <table class="minimalist-b">
    <thead>
      <tr>
        <th><%= Profesion.human_attribute_name(:nombre) %></th>
      </tr>
    </thead> 
    <tbody>
      <% for profesion in @profesiones  do%>
        <tr>
          <td>
	    <%= link_to profesion.nombre, profesion_path(profesion) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @profesiones %>
  
</div>
