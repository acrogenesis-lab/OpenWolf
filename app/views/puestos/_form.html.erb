<table border="0" cellpadding="0">
<tr>
 <td><%= f.label :nombre, t("puestos.label_nombre") %></td>
 <td><%= f.text_field :nombre, :size=>60, :limit=>60 %></td>
</tr>
<tr>
  <td><%= f.label :institucion_id, t('puestos.label_institucion_id') %> </td>
  <td><%= f.collection_select(:institucion_id, @instituciones, :id, :nombre) %></td>
</tr>
<tr>
 <td>&nbsp;</td>
 <td>
  <%= f.submit submittext %> | <%= image_tag('icon_cancel.png') %><%= link_to( t("data.cancel"), puestos_path )     %>
 </td>
</tr>
</table>
<script type="text/javascript" charset="utf-8">
	setfocus('puestos_nombre');
</script>
