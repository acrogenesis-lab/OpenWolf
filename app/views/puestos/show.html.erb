<% @forview = "SHOW" %>
<%= render :partial=>"breadcrums" %>
<h1 class="alt"> <%= t("puestos.title") %></h1>
<fieldset>
 <legend><%= image_tag("infoabout22.png") %> <%= t("puestos.title_show") %> </legend>

  <div class="options">    
    <strong><%= t("data.label_options") %> </strong> | 
    <%= image_tag('edit16.png') %><%= link_to( t("data.edit"), edit_puesto_path(@puesto) ) %> | 
    <%= image_tag('delete16.png') %><%= link_to t("data.delete"), @puesto, :confirm => t("data.rusure"), :method => :delete %> |
    <%= image_tag('add16.png') %><%= link_to t("data.new"), new_puesto_path %> |
    <%= image_tag('undo16.png') %><%= link_to( t("data.cancel"), puestos_path )%>
  </div>
  <hr />
  <table>
    <tr>
      <th width="20%"><%= label :puesto, t("puestos.label_nombre") %></th>
      <td width="80%"><%= @puesto.nombre %></td>
    </tr>
    <tr>
      <th><%= label :puesto, t("puestos.label_institucion_id") %></th>
      <td><%= @puesto.institucion.nombre %></td>
    </tr>
  </table>
</fieldset>
