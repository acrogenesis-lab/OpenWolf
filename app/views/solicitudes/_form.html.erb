<% form.inputs do %>
  <h2>Información Obligatoria</h2>

  <%= form.input :fecha_creacion, :as => :string,  :hint => "Fecha en que se realiza la solicitud.", :input_html => {:size => 20, :tab_index => 1 } %>
  <%= form.input :via, :hint => "Forma o medio como el solicitante presenta la solicitud.", :include_blank => false%>
  <%= form.input :solicitante_nombre, :input_html => {:size => 60, :maxsize => 254}, :hint => "Nombre, siglas o sinónimo como se identifica el solicitante." %>

  <%= form.input :textosolicitud, :input_html => {:rows => 5}, :hint => "Descripción de información solicitada" %>

  <% if @usa_solicitudes_privadas == true %>
    <%= form.input :informacion_publica, :label => 'La información contenida en esta solicitud es pública.' %>
  <% end %>

  <%= buttons_create(solicitudes_path) if action_name == 'new'%>
  <%= buttons_update(solicitud_path(@solicitud)) if action_name == 'edit'%>
  <div class="clear2">      
  </div><br /><br /><br />


  <h2>Información Optativa</h2>

  <h4>Información para notificaciones</h4>
  <%= form.input :solicitante_direccion, :input_html => {:size => 100, :maxsize => 254}, :hint => 'Opcional: si el ciudadano require que se le envien documentos.' %>
  <%= form.input :email, :input_html => {:size => 60, :maxsize => 254}, :hint => 'Opcional: si el ciudadano desea recibir notificaciones automáticas.' %>

  <%= form.input :solicitante_telefonos, :input_html => {:size => 60, :maxsize => 254}, :hint => "Opcional: si el ciudadano requiere que se le notifique telefónicamente." %>

  <h4>Información Estadistica</h4>
  <%= form.input :departamento, :hint => "Opcional: Departamento de la república donde se realiza la solicitud." %>
  <%= form.input :municipio, :hint => "Opcional: Municipio de la república donde se realiza la solicitud." %>    
  <%= form.input :genero, :include_blank => true, :hint => "Opcional: Género del solicitante" %>
  <%= form.input :rangoedad, :include_blank => true, :hint => "Opcional: Edad del solicitante" %>
  <%= form.input :clasificacion, :include_blank => true, :hint => "Opcional: Ocupación del solicitante" %>
  <%= form.input :profesion, :hint => "Opcional: Profesión del solicitante" %>
  <%= form.input :observaciones, :input_html => {:rows => 5}, :hint => "Observaciones pertinentes sobre solicitud." %>

<% end %>

<%= observe_field(:solicitud_departamento_id, :url => actualizar_municipios_solicitudes_path, :with => "departamento_id", :method => :get) %>
