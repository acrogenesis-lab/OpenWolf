<div class="listing">
  <h2><%= Estado.human_name.pluralize %></h2>
  
  <div id="options">
    <%= button_new(new_estado_path) %>
    <%= render :partial => 'shared/findbox', :locals => {:url => estados_path} %>
  </div>
  
  <table class="minimalist-b">
    <thead>
      <tr>
        <th><%= Estado.human_attribute_name(:nombre) %></th>
        <th><%= 'Estado Final' %></th>
        <th><%= Estado.human_attribute_name(:modulo) %></th>
      </tr>
    </thead> 
    <tbody>
      <% for estado in @estados  do%>
        <tr>
          <td>
	    <%= link_to estado.nombre, estado_path(estado) %>
          </td>
          <td>
            <%= estado.final ? 'Si' : 'No' %>
          </td>
          <td>
            <%= estado.nombre_modulo %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @estados %>
  
</div>
