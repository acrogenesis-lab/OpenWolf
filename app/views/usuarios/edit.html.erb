<% @forview = "EDIT" %>
<%= render :partial => "breadcrums" %>
<div class="mantform">
  <h2>Editar <%= Usuario.human_name %></h2>
  
  <% semantic_form_for @usuario do |form| %>
    <%= form.semantic_errors %>
    <%= render :partial => 'form', :locals => {:form => form} %>     

    <% if action_name == 'perfil' %>
      <%= buttons_update(main_path) %>
    <% else %>
      <%= buttons_update(usuarios_path) %>
    <% end %>


  <% end %>
  
</div>


